<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:layout_marginVertical="20dp">
<TextView
    android:id="@+id/friend_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/friend_nic"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="id"
    android:textSize="20dp">
</TextView>
    <TextView
        android:id="@+id/friend_nic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friend_id"
        app:layout_constraintBottom_toTopOf="@id/friend_pas"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="nic"
        android:textSize="20dp">
    </TextView>
    <TextView
        android:id="@+id/friend_pas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friend_nic"
        app:layout_constraintBottom_toTopOf="@id/friend_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="pas"
        android:textSize="20dp">
    </TextView>
    <TextView
        android:id="@+id/friend_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friend_pas"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="date"
        android:textSize="20dp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>